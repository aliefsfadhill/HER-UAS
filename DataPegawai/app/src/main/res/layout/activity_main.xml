<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/satup" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeskripsi"
        android:text="Berikut adalah halaman portal pegawai semua informasi terkait berita bisa di akses"
        android:layout_below="@id/imgLogo"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:text="Log in"
        android:id="@+id/btnLogin"
        android:backgroundTint="@color/blueDua"
        android:layout_below="@+id/tvDeskripsi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"

        />

    <Button
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:text="Sign Up"
        android:id="@+id/btnRegister"
        android:textColor="@color/black"
        android:backgroundTint="@color/blueTiga"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"

        />



</RelativeLayout>